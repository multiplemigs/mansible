#!/bin/bash
sudo /usr/local/bin/python2.7 ez_setup.py
if [ $? -eq 0 ]
then
  break
else
  echo "Could not run ez_setup.py" >&2
  exit 1
fi
sudo /usr/local/bin/easy_install-2.7 pip
if [ $? -eq 0 ]
then
  echo "Successfully installed ez_setup-2.7 and pip"
  exit 0
else
  echo "Could not install pip" >&2
  exit 1
fi